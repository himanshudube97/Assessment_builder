# ===========================================
# FlowForm Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -----------------
# Database
# -----------------
# For local development (Docker):
DATABASE_URL="postgresql://flowform:flowform_local_dev@localhost:5432/flowform"

# For production (Supabase):
# DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# Database provider: "local" | "supabase"
# Controls which client to use and enables provider-specific features
DB_PROVIDER="local"

# -----------------
# Supabase (Production)
# -----------------
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# -----------------
# Authentication
# -----------------
# For local dev, generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -----------------
# Google Sheets API
# -----------------
GOOGLE_SHEETS_CLIENT_ID=""
GOOGLE_SHEETS_CLIENT_SECRET=""

# -----------------
# Stripe
# -----------------
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Stripe Price IDs
STRIPE_PRO_PRICE_ID=""
STRIPE_AGENCY_PRICE_ID=""

# -----------------
# App Config
# -----------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="FlowForm"

# -----------------
# Analytics (Optional)
# -----------------
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# -----------------
# Error Tracking (Optional)
# -----------------
SENTRY_DSN=""

# -----------------
# AI (Optional)
# -----------------
ANTHROPIC_API_KEY=""
